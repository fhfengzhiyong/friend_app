<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@null"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_layout_pd"
        android:padding="10dp"
        >
        <TextView 
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入密码:"
            android:textSize="20sp"
            android:textColor="#EA8946"
            />
        <EditText 
            android:layout_below="@id/textView"
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:hint="接受数字"
            android:textCursorDrawable="@null"
            android:inputType="numberPassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_ed_pd"
            />

        <LinearLayout 
           android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button 
                android:text="确认"
                android:id="@+id/ok"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_btn_pd_ok_"
                android:layout_height="40dp"
                android:layout_width="120dp"
                />
              <Button 
                  android:id="@+id/cancel1"
                android:text="取消"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:background="@drawable/rounded_bun_pd_no"
                android:layout_height="40dp"
                android:layout_width="120dp"
                />
            
        </LinearLayout>

        <TextView
            android:id="@+id/eror"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText"
            android:text="密码错误!"
            android:textColor="#E82C2C"
            android:visibility="gone"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
